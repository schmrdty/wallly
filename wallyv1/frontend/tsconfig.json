{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "../../../.wally/.wally/wally-wallet-watcher/frontend/src/hooks/TransferForm.tsx",
    "../../../.wally/.wally/wally-wallet-watcher/frontend/src/hooks/SplashPage.tsx",
    "../../../.wally/.wally/wally-wallet-watcher/frontend/src/hooks/TokenValidator.tsx",
    "../../../.wally/.wally/wally-wallet-watcher/frontend/src/hooks/SessionManager.tsx",
    "pages/Dashboard.tsx",
    "pages/Settings.tsx",
    "pages/Instructions.tsx",
    "pages/SplashPage.tsx",
    "pages/Home.tsx",
    "pages/Transfer.tsx",
    "pages/Wallets.tsx",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
