  address: string;
  symbol: string;
  name: string;
  balance: string;
  decimals?: number;
  tokenId?: string;
  valueUSD: number;
  gasEstimate: string;
  priority: number;
}

interface TransferPlan {
  asset: Asset;
  order: number;
  gasPrice: string;
  maxGas: string;
  status: 'pending' | 'executing' | 'completed' | 'failed';
